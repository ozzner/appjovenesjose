<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkPrimaryColor"

    tools:context="rsantillanc.appjovenesjose.view.fragment.LoginFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:src="@drawable/logo"
                android:layout_gravity="center"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_marginBottom="35dp"
            android:layout_weight="1"
            style="@style/custom_edittext_style"
            >


            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:id="@+id/et_user"
                android:layout_marginBottom="1dp"
                android:textColorHint="@color/gray_color_2"
                android:hint="Usuario"
                style="@style/custom_edittext_style"
                android:textColor="@color/darkPrimaryColor"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:inputType="textPassword"
                android:hint="ContraseÃ±a"
                android:ems="10"
                android:textColorHint="@color/gray_color_2"
                android:id="@+id/et_password"
                style="@style/custom_edittext_style"
                android:textColor="@color/darkPrimaryColor"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:text="Inciar sesion"
                android:id="@+id/bt_login"
                style="@style/button_text"
                />

        </LinearLayout>

    </LinearLayout>

    </ScrollView>


</FrameLayout>
